<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamApp1.ScheduleDetailPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightGray" Padding="20" Spacing="10">
            <StackLayout>
                <Label Text="Day of the week: " TextColor="Black" FontSize="20"/>
                <Label x:Name="weekdayLabel"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Shift Time: " TextColor="Black" FontSize="20"/>
                <Label x:Name="workshiftLabel"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Work Detail: " TextColor="Black" FontSize="20"/>
                <Label x:Name="workDetailLabel"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Date To Be Completed: " TextColor="Black" FontSize="20"/>
                <Label x:Name="workCompletionLabel"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>